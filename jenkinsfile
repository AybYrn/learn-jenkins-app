pipeline {
    agent any
    
    environment {
        TEST_FILE_NAME = 'index.html'
    }
    
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "Build stage"
                    node --version
                    npm --version
                    npm ci
                    npm run build
                '''
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "Test stage"
                    ls -la ./build
                    test -f ./build/$TEST_FILE_NAME
                    npm test
                '''
            }
        }
    }
}
